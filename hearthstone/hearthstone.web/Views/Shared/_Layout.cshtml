
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title>hearthstone webshop</title>


    @Styles.Render("~/Content/css")
    <link href="https://fonts.googleapis.com/css?family=Eagle+Lake" rel="stylesheet">

    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <header>
        <div class="container">
            <div class="row">
                <div class="col-lg-1">
                    <!--https://www.easyicon.net/language.en/1194625-Hearthstone_icon.html-->
                    <img src="~/Content/images/logo.png" class="logo rotating" />
                </div>
                <div class="col-lg-11 title">
                    Clonestone Card Shop
                </div>
            </div>
        </div>
    </header>
    <nav>
        <div class="container">
            <div class="row">
                <div class="col-lg-2"><p>@Html.ActionLink("Shop", "Index", "Shop", new { })</p></div>
                <div class="col-lg-2"><p>@Html.ActionLink("Karten-Deck", "Index", "Deckbuilder")</p></div>
                <div class="col-lg-2"><p>@Html.ActionLink("Registrieren", "Register", "User")</p></div>
                <div class="col-lg-2"><input type="text" placeholder="Benutzer" class="form-control"></div>
                <div class="col-lg-2"><input type="password" placeholder="Passwort" class="form-control"></div>
                <div class="col-lg-2"><button type="submit" class="btn">Anmelden</button></div>
            </div>
        </div>
    </nav>

    @RenderBody()

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    &copy; 2017 ACME, Inc.
                </div>
                <div class="col-lg-4">
                    @Html.ActionLink("Terms&Conditions", "Terms", "Shop")
                </div>
                <div class="col-lg-4">
                    @Html.ActionLink("Privacy", "Privacy", "Shop")
                </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
